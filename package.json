{
    "name": "orderflow-trading",
    "version": "0.0.1",
    "license": "MIT",
    "author": "Cryptology",
    "description": "Cryptology OrderFlow Trading",
    "private": true,
    "files": [
        "dist",
        "bin"
    ],
    "main": "dist/app",
    "types": "dist/app",
    "bin": {
        "streamer": "bin/app"
    },
    "scripts": {
        "start": "node dist/app/index.js",
        "dev": "nodemon --watch 'src' --exec 'ts-node src/index.ts'",
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "check": "yarn lint && yarn build && yarn test",
        "clean": "rm -r dist",
        "compile": "yarn format && tsc",
        "format": "yarn lint && yarn prettier",
        "format:check": "prettier --check './**/*.{ts,tsx,js,json,css,html,md}'",
        "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "docs": "typedoc src --out docs",
        "prettier": "prettier --write './**/*.{ts,tsx,js,json,css,html,md}'",
        "setup": "yarn && yarn clean && yarn build",
        "snyk": "snyk test",
        "deps:missing": "node ./scripts/deps/missing.js",
        "pretest": "bash ./scripts/pre-test.sh",
        "test": "snyk test && cross-env CORE_ENV=test jest --runInBand --forceExit --detectOpenHandles",
        "test:coverage": "cross-env CORE_ENV=test jest --coverage --coveragePathIgnorePatterns='/(defaults.ts|index.ts)$' --runInBand --forceExit",
        "test:debug": "cross-env CORE_ENV=test node --inspect-brk ../../node_modules/.bin/jest --runInBand",
        "test:watch": "cross-env CORE_ENV=test jest --runInBand --watch",
        "test:watch:all": "cross-env CORE_ENV=test jest --runInBand --watchAll",
        "updates": "npx npm-check-updates",
        "update": "npx npm-check-updates -u"
    },
    "devDependencies": {
        "@types/better-sqlite3": "7.6.13",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.3",
        "@types/prettier": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "jest": "^29.5.0",
        "jest-extended": "^3.1.0",
        "jsdoc": "^4.0.4",
        "nodemon": "^3.1.10",
        "npm-check-updates": "^18.0.1",
        "prettier": "3.5.3",
        "snyk": "^1.100.0",
        "ts-jest": "^29.3.2",
        "ts-node": "^10.9.2",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "0.28.3",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix --debug"
        ]
    },
    "engines": {
        "node": ">=23.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "dependencies": {
        "@binance/common": "^1.0.2",
        "@binance/spot": "^4.0.0",
        "@types/express": "^5.0.1",
        "@types/ws": "^8.18.1",
        "better-sqlite3": "^11.9.1",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "lightweight-charts": "^5.0.6",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "ws": "^8.18.1"
    }
}
