{
    "name": "orderflow-trading",
    "type": "module",
    "version": "1.0.4",
    "license": "MIT",
    "author": "Cryptology",
    "description": "Cryptology OrderFlow Trading",
    "private": true,
    "files": [
        "dist",
        "bin"
    ],
    "main": "dist/app",
    "types": "dist/app",
    "bin": {
        "streamer": "bin/app"
    },
    "scripts": {
        "start": "bin/app",
        "start:dev": "NODE_ENV=development bin/app",
        "clean": "rm -r dist",
        "format": "yarn prettier && yarn lint && yarn lint:frontend",
        "lint": "eslint \"backend/src/**/*.{ts,tsx}\" ",
        "lint:frontend": "eslint \"frontend/src/**/*.{ts,tsx}\" ",
        "prettier": "npx prettier --write './**/*.{ts,tsx}'",
        "updates": "npx npm-check-updates",
        "update": "npx npm-check-updates -u",
        "build": "yarn format && tsc -p tsconfig.build.json && yarn build:frontend",
        "build:frontend": "tsc -p tsconfig.frontend.json --noEmitOnError",
        "test": "vitest --run",
        "test:coverage": "vitest run --coverage",
        "check:deps": "yarn install --check-cache",
        "typecheck": "tsc --noEmit",
        "build:watch": "tsc -p tsconfig.build.json --watch",
        "analyze:signals": "npx tsx analysis/analyze_success_with_price_reconstruction.ts",
        "analyze:thresholds": "npx tsx analysis/analyze_threshold_optimization_binary.ts",
        "analyze:traditional": "npx  --node-options='--max-old-space-size=16384' tsx analysis/analyze_traditional_indicators.ts",
        "check": "yarn lint && yarn typecheck && yarn build && yarn test",
        "check:ci": "yarn lint && yarn typecheck && yarn build --if-present && yarn test:coverage"
    },
    "devDependencies": {
        "@types/better-sqlite3": "7.6.13",
        "@types/node": "^24.2.0",
        "@types/ws": "^8.18.1",
        "@typescript-eslint/eslint-plugin": "^8.39.0",
        "@typescript-eslint/parser": "^8.39.0",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^10.0.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "jsdoc": "^4.0.4",
        "lint-staged": "^16.1.4",
        "npm-check-updates": "^18.0.2",
        "prettier": "3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    },
    "lint-staged": {
        "*.{ts,tsx,js,json,css,html,md}": "prettier --write"
    },
    "engines": {
        "node": ">=23.x"
    },
    "publishConfig": {
        "access": "public"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "dependencies": {
        "@binance/common": "^1.2.3",
        "@binance/spot": "^13.0.1",
        "@types/express": "^5.0.3",
        "async-mutex": "^0.5.0",
        "better-sqlite3": "^12.2.0",
        "decimal.js": "^10.6.0",
        "dotenv": "^17.2.1",
        "express": "^5.1.0",
        "fastpriorityqueue": "^0.7.5",
        "lightweight-charts": "^5.0.8",
        "mqtt": "5.14.0",
        "openai": "^5.12.0",
        "pino": "^9.7.0",
        "pino-pretty": "^13.1.1",
        "ulid": "^3.0.1",
        "ws": "^8.18.3",
        "zod": "^3.25.57"
    },
    "packageManager": "yarn@4.9.2"
}
