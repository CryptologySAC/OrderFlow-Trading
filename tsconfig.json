{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["vitest/globals", "node"],
        "allowSyntheticDefaultImports": true,

        // ğŸ¦ INSTITUTIONAL-GRADE TYPE SAFETY (MAXIMUM STRICTNESS)
        "noImplicitAny": true, // ğŸš« Ban implicit any
        "noImplicitReturns": true, // ğŸš« All code paths must return
        "noImplicitThis": true, // ğŸš« Ban implicit this
        "noFallthroughCasesInSwitch": true, // ğŸš« Ban fallthrough cases
        "noUncheckedIndexedAccess": true, // ğŸš« Force index access checks
        "exactOptionalPropertyTypes": true, // ğŸš« Strict optional properties
        "noImplicitOverride": true, // ğŸš« Force explicit override
        "noPropertyAccessFromIndexSignature": true, // ğŸš« Force bracket notation for index
        "allowUnusedLabels": false, // ğŸš« Ban unused labels
        "allowUnreachableCode": false, // ğŸš« Ban unreachable code
        "noImplicitUseStrict": false // âœ… Force use strict
    },
    "include": ["src/**/*", "test/**/*", "scripts/**/*"],
    "ts-node": {
        "esm": true
    }
}
